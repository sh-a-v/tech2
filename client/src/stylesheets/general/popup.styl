.popup-wrapper
  position fixed
  top 0
  left 0
  z-index 10

  display none
  width 100%
  height 100%
  overflow hidden

  opacity 0
  background-color black-05

  will-change opacity

.popup
  flex-display flex
  flex-justify-content center
  flex-align-items center
  width 100%
  height 100%
  overflow-y auto
  overflow-x hidden

.popup-close
  position fixed
  top 15px
  right 15px

  display block
  width 50px
  height 50px

  @media media-phone
    top 10px
    right 10px

    width 40px
    height 40px

.popup-content-wrapper
  flex-display flex
  flex-direction column
  flex-align-items center

  width 94%
  max-width popup-width

.popup-content
  width 100%
  min-height 50px
  margin 10px 0
