.popup
  position fixed
  top 0
  left 0
  z-index 10

  display none
  flex-justify-content center
  flex-align-items center
  width 100%
  height 100%
  overflow auto

  background-color black-05

  &.active
    flex-display flex

.popup-close
  position fixed
  top 15px
  right 15px

  display block
  width 50px
  height 50px

.popup-content
  flex-display flex
  width 500px
  height 250px

  background-color grey-2

