.menu
  position absolute
  top 0
  left 0

  flex-display flex
  width menu-width
  height 100%
  margin 0
  padding header-height + 20 0 0
  box-sizing border-box
  overflow-x hidden
  overflow-y hidden

.menu-items
  width 100%
  margin 0
  padding 0

.menu-item
  flex-display flex
  flex-align-items center
  width 100%
  height 80px

  color grey-5
  cursor pointer
  transition all 0.2s ease-out

  &.active
    color blue-1

.menu-item-button
  width 50px
  height 50px
  margin 0 15px
  box-sizing border-box

  background-size 24px

  //.menu-item.active &

.menu-tem-label
  font-size 16px


