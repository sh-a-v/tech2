.header
  position relative
  top 0
  left 0

  flex-display flex
  flex-direction row
  flex-justify-content space-between
  flex-align-items center
  flex 0 0 header-height
  box-sizing border-box

.header-logo
  flex-display flex
  flex-align-items center
  height 100%

.header-logo-icon
  width logo-size = header-height - 20
  height logo-size
  margin 0 10px
  box-sizing border-box

  border-radius logo-size
  background-color white

.header-logo-label
  font-size 24px

.header-controls
  flex-display flex
  height 50px
  padding-right 15px

  //background-color #000

.header-control
  width 50px
  height 50px
  margin-left 15px
