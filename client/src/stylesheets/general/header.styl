.header
  position relative
  top 0
  left 0

  flex-display flex
  flex-direction row
  flex-justify-content space-between
  flex-align-items center
  flex 0 0 header-height-desktop
  box-sizing border-box

  @media media-phone
    flex 0 0 header-height-phone

.header-logo
  flex-display flex
  flex-align-items center
  height 100%

.header-logo-icon
  width header-height-desktop - 20
  height header-height-desktop - 20
  margin 0 10px
  box-sizing border-box

  border-radius 50%
  background-color white

  @media media-phone
    width header-height-phone - 10
    height header-height-phone - 10

.header-logo-label
  font-size 24px

  @media media-phone
    font-size 22px

.header-controls
  flex-display flex
  height 50px
  padding-right 15px

  @media media-phone
    height 40px
    padding-right 10px

.header-control
  width 50px
  height 50px
  margin-left 15px

  @media media-phone
    width 40px
    height 40px
    margin-left 10px
