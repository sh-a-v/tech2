.header
  position relative
  top 0
  left 0
  z-index 2

  flex-display flex
  flex-direction row
  flex-justify-content space-between
  flex-align-items center
  flex-wrap nowrap
  flex 0 0 header-height-desktop
  width 100%
  box-sizing border-box

  @media media-phone
    flex 0 0 header-height-phone

.header-menu
  position absolute
  top 50%
  left -10px

  width 18px
  height 18px
  margin-top -9px

  transition left 0.2s ease
  transform translateZ(0)

  &.expanded
    left -12px

  @media media-desktop
    display none

/* Logo */

.header-logo
  flex-display flex
  flex-align-items center
  height 100%

.header-logo-icon
  position relative

  width header-height-desktop - 20
  height header-height-desktop - 20
  margin 0 10px
  box-sizing border-box
  overflow hidden

  border-radius 50%
  background-color white

  @media media-phone
    width header-height-phone - 10
    height header-height-phone - 10

.header-logo-icon-gearwheel
  position absolute

  background-size 100% auto
  background-repeat no-repeat
  background-position center

  animation spin 1s linear infinite
  animation-play-state paused
  animation-direction normal

  &.gearwheel-1
    top 2px
    left 10px
    width 30px
    height 30px

  &.gearwheel-2
    top 27px
    right 5px
    width 24px
    height 24px

    animation-direction reverse
    animation-duration 0.9s

  &.gearwheel-3
    bottom 5px
    left 10px
    width 20px
    height 20px

    animation-duration 0.7s

  .loading &
    animation-play-state running

  @media media-phone
    &.gearwheel-1
      left 9px
      width 24px
      height 24px

    &.gearwheel-2
      top 22px
      right 3px
      width 20px
      height 20px

    &.gearwheel-3
      width 16px
      height 16px

.header-logo-label
  font-size 24px

  @media media-phone
    font-size 22px
    transition opacity 0.2s ease-in

    &.transparent
      opacity 0.2

/* Controls */

.header-controls
  position absolute
  top 15px
  right 0

  max-width 100%
  height header-control-width-desktop
  padding-bottom 7px
  overflow hidden

  transition all 0.4s ease-in
  transform translateZ(0)

  &.invisible
    opacity 0

  &.expanded
    max-width 100%

  &.collapsed
    max-width header-control-width-desktop + 15
    transition all 0.3s ease-out

  @media media-phone
    top 10px
    max-width header-control-width-phone + 10
    height header-control-width-phone

    &.collapsed
      max-width header-control-width-phone + 10


.header-control
  width header-control-width-desktop
  height header-control-width-desktop
  margin-right 15px
  margin-bottom 15px
  vertical-align middle

  &.expanded
    width header-control-width-desktop - 2
    height header-control-width-desktop - 2
    display none

  &.collapsed
    position absolute
    top 0
    right 0

    display none
    width header-control-width-desktop
    height header-control-width-desktop

    background-color transparent
    cursor pointer

    &::after
      position absolute
      top 1px
      left 16%
      z-index -1

      display block
      width header-control-width-desktop - 2
      height header-control-width-desktop - 2
      border-radius 50%

      content ''
      background-color white

  .collapsed &
    &.collapsed
      display block

  @media media-phone
    width header-control-width-phone
    height header-control-width-phone
    margin-right 10px

    &.expanded
      width header-control-width-phone - 2
      height header-control-width-phone - 2
      display inline-block

    &.collapsed
      width header-control-width-phone
      height header-control-width-phone

      &::after
        width header-control-width-phone - 2
        height header-control-width-phone - 2
