.icon
  background-size 24px 24px
  background-repeat no-repeat
  background-position center

  @media media-phone
    background-size 18px 18px

.icon-logo
  background-image url('../../images/icons/logo.png')
  
.icon-close
  background-image url('../../images/icons/close.png')

.icon-collapse-arrow
  background-image url('../../images/icons/collapse-arrow-right.png')
  background-size 14px 14px

.icon-menu
  background-image url('../../images/icons/menu.png')
  background-size 14px 14px

.icon-search
  background-image url('../../images/icons/search-disable.png')
  .active &
    background-image url('../../images/icons/search-active.png')

.icon-catalog
  background-image url('../../images/icons/catalog-disable.png')
  .active &
    background-image url('../../images/icons/catalog-active.png')

.icon-cabinet
  background-image url('../../images/icons/cabinet-disable.png')
  .active &
    background-image url('../../images/icons/cabinet-active.png')

.icon-user
  background-image url('../../images/icons/user-inactive.png')
  &.active
    background-image url('../../images/icons/user-active.png')

.icon-filter
  background-image url('../../images/icons/filter-inactive.png')
  &.active
    background-image url('../../images/icons/filter-active.png')

.icon-gearwheel
  background-image url('../../images/icons/gearwheel.png')

.icon-fcbk
  background-image url('../../images/icons/fb.png')
  background-color #3b5998

.icon-ggl
  background-image url('../../images/icons/google.png')
  background-color #dd4b39

.icon-twttr
  background-image url('../../images/icons/twitter.png')
  background-color #55acee

.icon-vkntkt
  background-image url('../../images/icons/vk.png')
  background-color #45668e
